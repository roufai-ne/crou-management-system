# ========================================
# CROU MANAGEMENT SYSTEM - Frontend Web
# Configuration Environment Variables
# ========================================
# Date: Octobre 2025
#
# INSTRUCTIONS:
# 1. Copier ce fichier vers .env
# 2. Modifier les valeurs selon votre environnement
# 3. NE JAMAIS committer le fichier .env dans Git
#
# NOTE: Les variables Vite doivent commencer par VITE_
# ========================================

# ========================================
# ENVIRONMENT
# ========================================
# Options: development, staging, production
VITE_NODE_ENV=development

# Version de l'application
VITE_APP_VERSION=1.0.0

# ========================================
# API CONFIGURATION
# ========================================
# URL de base de l'API backend
VITE_API_URL=http://localhost:3001/api

# URL de base pour les assets statiques
VITE_API_BASE_URL=http://localhost:3001

# Timeout des requêtes API (en millisecondes)
VITE_API_TIMEOUT=30000

# ========================================
# WEBSOCKET CONFIGURATION
# ========================================
# URL WebSocket pour les notifications temps-réel
VITE_WS_URL=ws://localhost:3001

# Activer les WebSockets
VITE_WS_ENABLED=false

# Reconnexion automatique
VITE_WS_AUTO_RECONNECT=true

# ========================================
# AUTHENTICATION
# ========================================
# Nom de la clé du token dans localStorage
VITE_AUTH_TOKEN_KEY=crou_auth_token

# Nom de la clé du refresh token
VITE_AUTH_REFRESH_TOKEN_KEY=crou_refresh_token

# Durée de validité du token en millisecondes (1 heure)
VITE_AUTH_TOKEN_EXPIRY=3600000

# ========================================
# APPLICATION SETTINGS
# ========================================
# Nom de l'application
VITE_APP_NAME=CROU Management System

# Description courte
VITE_APP_DESCRIPTION=Système de Gestion des Centres Régionaux des Œuvres Universitaires

# Organisation
VITE_APP_ORGANIZATION=Ministère de l'Enseignement Supérieur du Niger

# ========================================
# UI CONFIGURATION
# ========================================
# Langue par défaut
VITE_DEFAULT_LOCALE=fr

# Langues supportées (séparées par virgule)
VITE_SUPPORTED_LOCALES=fr,en

# Thème par défaut (light, dark, system)
VITE_DEFAULT_THEME=light

# Activer le mode sombre
VITE_DARK_MODE_ENABLED=true

# ========================================
# PAGINATION & LIMITS
# ========================================
# Nombre d'éléments par page par défaut
VITE_DEFAULT_PAGE_SIZE=20

# Options de pagination disponibles
VITE_PAGE_SIZE_OPTIONS=10,20,50,100

# Limite maximale de résultats
VITE_MAX_RESULTS=1000

# ========================================
# FILE UPLOAD
# ========================================
# Taille maximale des fichiers (en octets - 5MB)
VITE_MAX_FILE_SIZE=5242880

# Types de fichiers autorisés
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/csv

# Nombre maximum de fichiers simultanés
VITE_MAX_FILES=10

# ========================================
# CACHE & STORAGE
# ========================================
# Activer le cache local
VITE_CACHE_ENABLED=true

# Durée du cache en millisecondes (5 minutes)
VITE_CACHE_TTL=300000

# Taille maximale du cache (en MB)
VITE_CACHE_MAX_SIZE=50

# Préfixe pour les clés localStorage
VITE_STORAGE_PREFIX=crou_

# ========================================
# FEATURES FLAGS
# ========================================
# Activer le mode PWA (Progressive Web App)
VITE_PWA_ENABLED=true

# Activer les notifications push
VITE_PUSH_NOTIFICATIONS_ENABLED=false

# Activer le mode offline
VITE_OFFLINE_MODE_ENABLED=true

# Activer les analytics
VITE_ANALYTICS_ENABLED=false

# Activer le mode debug
VITE_DEBUG_MODE=false

# ========================================
# MAP & GEOLOCATION
# ========================================
# Clé API Google Maps (si nécessaire)
VITE_GOOGLE_MAPS_API_KEY=

# Centre par défaut de la carte (Niamey, Niger)
VITE_MAP_DEFAULT_CENTER_LAT=13.5127
VITE_MAP_DEFAULT_CENTER_LNG=2.1128

# Zoom par défaut
VITE_MAP_DEFAULT_ZOOM=12

# ========================================
# MONITORING & ANALYTICS
# ========================================
# Google Analytics ID
VITE_GA_TRACKING_ID=

# Sentry DSN pour le tracking d'erreurs
VITE_SENTRY_DSN=

# Environment Sentry
VITE_SENTRY_ENVIRONMENT=development

# ========================================
# EXTERNAL SERVICES
# ========================================
# URL de services externes
VITE_EXTERNAL_SERVICE_URL=

# Clé API pour services externes
VITE_EXTERNAL_API_KEY=

# ========================================
# DEVELOPMENT ONLY
# ========================================
# Activer les outils de développement React
VITE_REACT_DEVTOOLS=true

# Afficher les logs de debug
VITE_DEBUG_LOGS=true

# Mode strict React
VITE_REACT_STRICT_MODE=true

# Activer le hot reload
VITE_HMR=true

# ========================================
# BUILD CONFIGURATION
# ========================================
# Base URL pour le déploiement
VITE_BASE_URL=/

# Dossier de sortie du build
VITE_OUT_DIR=dist

# Générer les source maps
VITE_GENERATE_SOURCEMAP=false

# ========================================
# CONTACT & SUPPORT
# ========================================
# Email de support
VITE_SUPPORT_EMAIL=support@crou.ne

# Téléphone de support
VITE_SUPPORT_PHONE=+227 20 73 31 29

# URL de documentation
VITE_DOCS_URL=https://docs.crou.ne

# URL du site web
VITE_WEBSITE_URL=https://www.crou.ne

# ========================================
# SOCIAL MEDIA
# ========================================
VITE_FACEBOOK_URL=
VITE_TWITTER_URL=
VITE_LINKEDIN_URL=

# ========================================
# EXAMPLE PRODUCTION VALUES
# ========================================
# VITE_NODE_ENV=production
# VITE_API_URL=https://api.crou.gov.ne/api
# VITE_WS_URL=wss://api.crou.gov.ne
# VITE_WS_ENABLED=true
# VITE_DEBUG_MODE=false
# VITE_DEBUG_LOGS=false
# VITE_GENERATE_SOURCEMAP=false
# VITE_ANALYTICS_ENABLED=true
# VITE_SENTRY_DSN=https://your-sentry-dsn
# VITE_SENTRY_ENVIRONMENT=production

# ========================================
# NOTES
# ========================================
#
# SÉCURITÉ:
# - Ne jamais exposer de secrets dans les variables VITE_
# - Les variables VITE_ sont publiques dans le bundle
# - Utiliser l'API backend pour les opérations sensibles
#
# PERFORMANCE:
# - Activer le cache pour améliorer les performances
# - Désactiver les source maps en production
# - Optimiser les images et assets
#
# PWA:
# - Configurer le manifest.json
# - Définir les icônes et splash screens
# - Tester le mode offline
#
# ========================================
