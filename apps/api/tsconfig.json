{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* API-specific overrides */
    "lib": ["ES2022"],
    "noEmit": false,
    "rootDir": "../../",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/modules/*": ["./modules/*"],
      "@/shared/*": ["./shared/*"],
      "@/config/*": ["./config/*"],
      "@database/*": ["../../packages/database/src/*"]
    },
    "types": ["node"],
    /* TypeORM n√©cessite cette config */
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../packages/database/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/test/**/*.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}